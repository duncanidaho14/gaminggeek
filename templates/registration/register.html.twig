{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container register-container">
        <div class="row">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <div class="col-lg">
                <h1 class="register-title">Inscription</h1>
            </div>
            <div class="col-lg-12 register-form">
            {{ form_start(registrationForm) }}
                
                {{ form_row(registrationForm.firstName, {
                    label: 'prenom'
                }) }}
                {{ form_row(registrationForm.lastName) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.avatar) }}
                {{ form_row(registrationForm.introduction) }}
                {{ form_row(registrationForm.description) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-outline-primary">Inscription</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
  </div>
</div>
{% endblock %}
